

<table class="table">
  <thead>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Ticket</strong></td>
      <td><strong>Details</strong></td>
    </tr>
        <% @attractions.each do |a| %>
        <tr> 
            <td> <%= a.name %></td>
            <td> <%= a.tickets %> </td>
            <td> <% if current_user.admin %>
                    <%= link_to "Show #{a.name}", a %> 
                 <% else %>
                    <%= link_to "Go on #{a.name}", a %>
                 <% end %> 
            </td>
        </tr>
            <% end %>
  </tbody>
</table>

<% if current_user.admin %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>